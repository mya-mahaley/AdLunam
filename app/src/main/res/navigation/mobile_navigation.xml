<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.adlunam.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_images"
        android:name="com.example.adlunam.ui.images.ImagesFragment"
        android:label="@string/title_images"
        tools:layout="@layout/fragment_image" />

    <fragment
        android:id="@+id/navigation_trivia"
        android:name="com.example.adlunam.ui.trivia.TriviaFragment"
        android:label="@string/title_trivia"
        tools:layout="@layout/fragment_trivia" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.adlunam.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>